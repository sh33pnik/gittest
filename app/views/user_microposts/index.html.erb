<p style="color: green"><%= notice %></p>

<h1>Microposts</h1>

<div id="microposts">
  <% @microposts.each do |micropost| %>
    <%= render micropost %>
    <p>
      <%= link_to "Show this micropost", user_micropost_path(@user, micropost) %> |
      <%= link_to "Back to User", user_path(@user) %>
    </p>
  <% end %>
</div>

<%= link_to "New micropost", new_micropost_path %>
